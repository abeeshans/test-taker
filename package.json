{
  "name": "custom-test-taker",
  "version": "1.0.0",
  "description": "A custom test-taking application.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "dist": "electron-builder --publish never",
    "dist:win": "electron-builder --win nsis --publish never",
    "dist:mac": "electron-builder --mac dmg --publish never"
  },
  "keywords": [
    "electron",
    "test",
    "quiz"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.example.customtesttaker",
    "productName": "Custom Test Taker",
    "asar": true,
    "compression": "maximum",
    "npmRebuild": false,
    "files": [
      "**/*",
      "!json/**",
      "!PDFs/**",
      "!.github/**",
      "!**/*.log",
      "!**/*.map",
      "!**/*.psd",
      "!build/icon.svg",
      "build/icon.ico",
      "build/icon.icns",
      "index.html",
      "main.js",
      "preload.js",
      "renderer.js",
      "style.css",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
